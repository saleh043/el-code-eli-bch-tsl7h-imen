body {
    font-family: Arial, sans-serif; /* Specify a font */
    text-align: center; /* Center align the text */
}

h1 {
    margin-top: 50px; /* Add a margin to the top of the heading */
}

form {
    margin: 50px auto; /* Center the form horizontally and add a margin of 50px from the top and bottom */
    width: 300px; /* Set the width of the form */
    text-align: left; /* Left align the text within the form */
}

label {
    font-weight: bold; /* Make the labels bold */
    display: block; /* Display the label as a block element */
    margin-bottom: 10px; /* Add a margin at the bottom of each label */
    
}

input[type=number] {
    padding: 10px; /* Add padding to the input fields */
    width: 100%; /* Make the input fields take up the full width of the form */
    margin-bottom: 20px; /* Add a margin at the bottom of each input field */
    box-sizing: border-box; /* Include the padding and border in the total width and height */
    color: rgb(126, 126, 126);
}

button {
    background-color: #3498db; /* Set the background color of the button */
    color: #fff; /* Set the text color of the button */
    padding: 10px 20px; /* Add padding to the button */
    border: none; /* Remove the border */
    cursor: pointer; /* Change the cursor to a pointer when hovering over the button */
}

#result {
    margin-top: 20px; /* Add a margin at the top of the result paragraph */
    font-weight: bold; /* Make the result text bold */
}
