    <script>
      function calculateAverage() {
        var control_info = parseFloat(document.getElementById("control_info").value);
        var test_info = parseFloat(document.getElementById("test_info").value);
        var test_html = parseFloat(document.getElementById("test_html").value);
        var synthese_info = parseFloat(document.getElementById("synthese_info").value);
        var moy_info = ((test_info + test_html) / 2 + (control_info + synthese_info + synthese_info)) /4;
        var score_info = (moy_info) *3;


        var control_arabe = parseFloat(document.getElementById("control_arabe").value);
        var oral_arabe = parseFloat(document.getElementById("oral_arabe").value);
        var synthese_arabe = parseFloat(document.getElementById("synthese_arabe").value);
        var moy_arabe = (oral_arabe + control_arabe + synthese_arabe + synthese_arabe) /4;
        var score_arabe = (moy_arabe) *2;

        var control_francais = parseFloat(document.getElementById("control_francais").value);
        var oral_francais = parseFloat(document.getElementById("oral_francais").value);
        var synthese_francais = parseFloat(document.getElementById("synthese_francais").value);
        var moy_francais = (control_francais + oral_francais + synthese_francais + synthese_francais) /4;
        var score_francais = (moy_francais) *2;

        var control_anglais = parseFloat(document.getElementById("control_anglais").value);
        var oral_anglais = parseFloat(document.getElementById("oral_anglais").value);
        var synthese_anglais = parseFloat(document.getElementById("synthese_anglais").value);
        var moy_anglais = (control_anglais + oral_anglais + synthese_anglais + synthese_anglais) /4;
        var score_anglais = (moy_anglais) *2;

        var control_tari5 = parseFloat(document.getElementById("control_tari5").value);
        var oral_tari5 = parseFloat(document.getElementById("oral_tari5").value);
        var synthese_tari5 = parseFloat(document.getElementById("synthese_tari5").value);
        var score_tari5 = (oral_tari5 + control_tari5 + synthese_tari5 + synthese_tari5) /4;


        var control_jo8rafiya = parseFloat(document.getElementById("control_jo8rafiya").value);
        var oral_jo8rafiya = parseFloat(document.getElementById("oral_jo8rafiya").value);
        var synthese_jo8rafiya = parseFloat(document.getElementById("synthese_jo8rafiya").value);
        var score_jo8rafiya = (control_jo8rafiya + oral_jo8rafiya + synthese_jo8rafiya + synthese_jo8rafiya) /4;

        var control_islamiya = parseFloat(document.getElementById("control_islamiya").value);
        var oral_islamiya = parseFloat(document.getElementById("oral_islamiya").value);
        var synthese_islamiya = parseFloat(document.getElementById("synthese_islamiya").value);
        var score_islamiya = (oral_islamiya + control_islamiya + synthese_islamiya + synthese_islamiya) /4;


        var control_madaniya = parseFloat(document.getElementById("control_madaniya").value);
        var oral_madaniya = parseFloat(document.getElementById("oral_madaniya").value);
        var synthese_madaniya = parseFloat(document.getElementById("synthese_madaniya").value);
        var score_madaniya = (oral_madaniya + control_madaniya + synthese_madaniya + synthese_madaniya);

        var control_math1 = parseFloat(document.getElementById("control_math1").value);
        var control_math2 = parseFloat(document.getElementById("control_math2").value);
        var synthese_math = parseFloat(document.getElementById("synthese_math").value);
        var moy_math = (control_math1 + control_math2 + synthese_math + synthese_math) /4;
        var score_math = (moy_math) *4;

        var tp_physique = parseFloat(document.getElementById("TP_physique").value);
        var control_physique = parseFloat(document.getElementById("control_physique").value);
        var synthese_physique = parseFloat(document.getElementById("synthese_physique").value);
        var moy_physique = (tp_physique + control_physique + synthese_physique + synthese_physique) /4;
        var score_physique =(moy_physique) *3;

        var project_technique = parseFloat(document.getElementById("project_technique").value);
        var control_technique = parseFloat(document.getElementById("control_technique").value);
        var synthese_technique = parseFloat(document.getElementById("synthese_technique").value);
        var moy_technique = (project_technique + control_technique + synthese_technique + synthese_technique) /4;
        var score_technique = (moy_technique) *2;

        var Sport = parseFloat(document.getElementById("Sport").value);

        var average = (score_info + score_arabe + score_francais + score_anglais + score_tari5 + score_jo8rafiya + score_islamiya + score_madaniya + score_math + score_physique + score_technique + Sport) / 23;
        document.getElementById("average").innerHTML = "mo3dlek : " + average;
      }
    </script>
   
